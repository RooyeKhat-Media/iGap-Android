<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_centerInParent="true"
  android:clickable="true"
  android:gravity="center"
  android:orientation="vertical">

  <FrameLayout
    android:id="@+id/Layout_showImage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <TextureView
      android:id="@+id/textureView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center"
      android:visibility="gone" />

    <net.iGap.module.TouchImageView
      android:id="@+id/sisl_touch_image_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:adjustViewBounds="true"
      android:scaleType="fitCenter"
      android:src="@mipmap/difaultimage"
      android:visibility="visible" />


    <ImageView
      android:id="@+id/imgPlay"
      android:layout_width="56dp"
      android:layout_height="56dp"
      android:layout_gravity="center"
      android:background="@drawable/background_progress"
      android:visibility="visible"
      app:srcCompat="@drawable/ic_play" />


    <include
      android:id="@+id/progress"
      layout="@layout/msg_progress_item"
      android:layout_width="56dp"
      android:layout_height="56dp"
      android:layout_gravity="center"
      android:visibility="gone" />


  </FrameLayout>

</LinearLayout>