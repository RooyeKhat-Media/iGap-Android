<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/rootView"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/fragment_back"
    tools:context=".fragment.AddCardFragment">

  <!--<android.support.v7.widget.CardView-->
  <!--android:layout_width="match_parent"-->
  <!--android:layout_height="wrap_content"-->
  <!--app:cardCornerRadius="1dp"-->
  <!--app:cardPreventCornerOverlap="false"-->
  <!--app:cardMaxElevation="0dp"-->
  <!--app:cardElevation="@dimen/app_bar_card_view_elevation"-->
  <!--android:layout_marginTop="-8dp">-->

        <ir.radsense.raadcore.app.RaadToolBar
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
          android:layout_height="?actionBarSize" />

  <!--</android.support.v7.widget.CardView>-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
          android:id="@+id/rootCardView"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:elevation="4dp"
            android:background="@android:color/white">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                card_view:cardElevation="8dp"
                card_view:cardCornerRadius="40dp"
                android:layout_margin="16dp">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"/>

            </android.support.v7.widget.CardView>


            <TextView
                android:id="@+id/card_number_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:text="@string/enter_your_card_number"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="-8dp"/>

            <EditText
                android:id="@+id/card_number"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/input_edit_text_back"
                android:textColor="#212121"
                android:inputType="number"
                android:hint="@string/card_number"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_margin="16dp"
                android:imeOptions="actionNext"
                android:layoutDirection="ltr"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginTop="14dp">

                <TextView
                    android:id="@+id/month_title"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:text="@string/month"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"/>

                <TextView
                    android:id="@+id/year_title"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:text="@string/year" />

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <EditText
                    android:id="@+id/month"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:background="@drawable/input_edit_text_back"
                    android:textColor="#212121"
                    android:inputType="number"
                    android:hint="@string/month"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:imeOptions="actionNext"
                    android:nextFocusForward="@id/year"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"/>

                <EditText
                    android:id="@+id/year"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:background="@drawable/input_edit_text_back"
                    android:textColor="#212121"
                    android:inputType="number"
                    android:hint="@string/year"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e3f2fd"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/default_card_title"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:text="@string/default_card"/>

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/default_card_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e3f2fd"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/button_green_selector_24dp"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:text="@string/save"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"/>

                <ProgressBar
                    android:id="@+id/progress"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:visibility="gone"/>

            </FrameLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>